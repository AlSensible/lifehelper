<resources>

    <!-- Base application theme. -->
    <style
        name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>
    <style
        name="AppCompatActivityTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#3b8dff</item>

    </style>

    <style name="help_a_tv">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#404040</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="help_q_tv">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
